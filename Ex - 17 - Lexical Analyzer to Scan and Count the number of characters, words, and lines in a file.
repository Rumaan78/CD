#include <stdio.h>
#include <ctype.h>

int main() {
    char ch;
    int characters = 0, words = 0, lines = 0;
    int inWord = 0;

    printf("Enter the code (press Ctrl+D to end input on Linux/Mac or Ctrl+Z on Windows):\n\n");

    while ((ch = getchar()) != EOF) {
        characters++;

        if (ch == '\n')
            lines++;

        if (isspace(ch) || ispunct(ch)) {
            if (inWord) {
                words++;
                inWord = 0;
            }
        } else {
            inWord = 1;
        }
    }

    if (inWord) 
        words++;

    printf("\nTotal number of characters : %d\n", characters);
    printf("Total number of words      : %d\n", words);
    printf("Total number of lines      : %d\n", lines);

    return 0;
}
