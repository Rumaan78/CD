#include <stdio.h>
#include <ctype.h>
int main() {
    char str[100];
    int i;
    printf("Enter string: ");
    gets(str);
    printf("Identifiers: ");
    for(i=0; str[i]!='\0'; i++) {
        if(isalpha(str[i]))
            printf("%c ", str[i]);
    }
    printf("\nConstants: ");
    for(i=0; str[i]!='\0'; i++) {
        if(isdigit(str[i])) {
            printf("%c", str[i]);
            if(!isdigit(str[i+1])) printf(" ");
        }
    }
    printf("\nOperators: ");
    for(i=0; str[i]!='\0'; i++) {
        if(str[i]=='=' || str[i]=='+' || str[i]=='*' || str[i]=='-')
            printf("%c ", str[i]);
    }
    return 0;
}
